<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src="/js/btnGuardarAccion.js"></script>
<link rel="stylesheet" href="/css/card.css">
<div class="container mt-4">
    <div class="row">
        <!-- Columna izquierda: Formulario -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <center><h1>Acciones para realizar</h1></center>
                </div>
                <div class="card-body">
                    <!-- se mandan los datos del formulario mediante POST -->

                    <form action="/home/acciones" method="POST" id="formAcciones">
                        <div class="form-group">
                            <input type="text" class="form-control" name="contacto" placeholder="Contacto" list="contactos" required>
                            <datalist id="contactos">
                                {{#each contactList}}
                                    <option value="{{this}}">
                                {{/each}}
                             </datalist>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="accion" id="accion" placeholder="Acción para realizar" value="{{accion}}" required>
                        </div>
                        <div class="form-group">
                            <input type="date" class="form-control" id="fecha" name="fecha" value="{{fecha}}" min="{{today}}" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block" id="guardarBtn" disabled>Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Columna derecha: collectionData -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <center><h1>Acciones Guardadas</h1></center>
                </div>
                <div class="card-body custom-scroll">
                    {{#each collectionData}}
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title"><b>{{this.fechaFormatted}}</b></h5>
                            <p class="card-text">{{this.accion}} de {{this.contacto}}</p>
                            <div class="d-flex justify-content-between align-items-end">
                                <button type="submit" class="btn btn-sm btn-success modify-button" data-id="{{this._id}}" data-contacto="{{this.contacto}}" data-accion="{{this.accion}}" data-fecha="{{this.fechaFormatted}}" style="width: 80px">Modificar</button>
                                <form action="/eliminarAccion" method="POST" class="delete-form">
                                    <input type="hidden" name="accionId" value="{{this._id}}">
                                    <button type="submit" class="btn btn-sm btn-danger" style="width: 80px">Borrar</button>
                                </form>
                            </div>
                        </div>                            
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Modificar Accion -->
<div class="modal fade" id="modificarAccionModal" tabindex="-1" role="dialog" aria-labelledby="modificarAccionModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modificarAccionModalLabel">Modificar Acción</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/modificarAccion" method="POST" id="modificarAccionForm">
                    <div class="form-group">
                        <input type="text" class="form-control" name="contacto" id="modificarContacto" placeholder="Contacto" list="contactos" required>
                        <datalist id="contactos">
                            {{#each contactList}}
                                <option value="{{this}}">
                            {{/each}}
                        </datalist>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="accion" id="modificarAccion" placeholder="Acción para realizar" required>
                    </div>
                    <div class="form-group">
                        <input type="date" class="form-control" id="modificarFecha" name="fecha" min="{{today}}" required>
                    </div>
                    <div class="d-flex justify-content-between align-items-end">
                        <button type="submit" class="btn btn-primary btn-block" style="width: 80px">Guardar</button>
                        <button type="button" class="btn btn-secondary" id="cancelarModificar" style="width: 80px">Cancelar</button>
                    </div>
                    <input type="hidden" id="accionId" name="accionId">
                </form>
            </div>
        </div>
    </div>
</div>
