<div class="container mx-4">
<div class="row">
    <div class="col-md-4 ml-auto">
        <div class="card">
            <div class="card-header">
               <center><h1>Acciones para realizar</h1></center> 
            </div>
            <div class="card-body">
                <!-- se mandan los datos del formulario mendiante post -->
                <form action="/home/acciones" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="contacto" placeholder="Nombre de persona" value="{{contacto}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="accion" placeholder="Accion para realizar" value="{{accion}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="fecha" placeholder="Fecha de la realizacion" value="{{fecha}}">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>