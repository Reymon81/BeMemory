<link rel="stylesheet" href="/css/card.css">
<div class="container mt-4">
    <div class="row">
        <!-- Columna izquierda: Formulario -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <center><h1>Acciones para realizar</h1></center>
                </div>
                <div class="card-body">
                    <!-- se mandan los datos del formulario mediante POST -->
                    <form action="/home/acciones" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="contacto" placeholder="Nombre de persona" value="{{contacto}}" required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="accion" placeholder="Acción para realizar" value="{{accion}}" required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="fecha" placeholder="Fecha de la realización" value="{{fecha}}" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Columna derecha: collectionData -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <center><h1>Acciones Guardadas</h1></center>
                </div>
                <div class="card-body custom-scroll">
                    {{#each collectionData}}
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title"><b>{{this.fecha}}</b></h5>
                            <p class="card-text">{{this.accion}} de {{this.contacto}}</p>
                            <form action="/eliminarAccion" method="POST">
                                <input type="hidden" name="accionId" value="{{this._id}}">
                                <button type="submit" class="btn btn-sm btn-primary position-absolute" style="bottom: 10px; right: 10px;">Borrar</button>
                            </form>
                        </div>                            
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>

