<div class="container mx-4">
<div class="row">
    <div class="col-md-4 ml-auto">
        <div class="card">
            <div class="card-header">
               <center><h1>Conversacion a tratar</h1></center> 
            </div>
            <div class="card-body">
                <!-- se mandan los datos del formulario mendiante post -->
                <form action="/home/conversaciones" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="nombre" placeholder="Nombre" value="{{nombre}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="conversacion" placeholder="Tema de conversacion" value="{{conversacion}}">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>