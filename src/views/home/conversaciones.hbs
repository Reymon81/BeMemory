<div class="container mt-4">
    <div class="row">
        <!-- Columna izquierda: Formulario -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <center><h1>Conversación a tratar</h1></center>
                </div>
                <div class="card-body">
                    <!-- se mandan los datos del formulario mendiante post -->
                    <form action="/home/conversaciones" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="nombre" placeholder="Nombre" required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="conversacion" placeholder="Tema de conversación" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Columna derecha: collectionData -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <center><h1>Conversaciones Pendientes</h1></center>
                </div>
                <div class="card-body">
                    {{#each collectionData}}
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title"><strong>{{this.nombre}}</strong></h5>
                            <p class="card-text">{{this.conversacion}}</p>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>

