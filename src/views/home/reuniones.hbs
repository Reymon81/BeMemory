<link rel="stylesheet" href="/css/card.css">
<div class="container mt-4">
    <div class="row">
        <!-- Columna izquierda: Formulario -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <center><h1>Agregar Reunión</h1></center>
                </div>
                <div class="card-body">
                    <!-- se mandan los datos del formulario mediante POST -->
                    <form action="/home/reuniones" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="asunto" placeholder="Asunto de reunión" value="{{asunto}}" required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="contactos" placeholder="Miembros de la reunión" value="{{contactos}}" required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="fecha" placeholder="Fecha de la reunión" value="{{fecha}}" required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="hora" placeholder="Hora de la reunión" value="{{hora}}" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Columna derecha: collectionData -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <center><h1>Reuniones Agendadas</h1></center>
                </div>
                <div class="card-body custom-scroll">
                    {{#each collectionData}}
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title"><b>{{this.fecha}} - {{this.hora}} h.</b></h5>
                            <p class="card-text">{{this.asunto}}</p>
                            <p class="card-text">{{this.contactos}}</p>
                            <form action="/eliminarReunion" method="POST">
                                <input type="hidden" name="reunionId" value="{{this._id}}">
                                <button type="submit" class="btn btn-sm btn-primary position-absolute" style="bottom: 10px; right: 10px;">Borrar</button>
                            </form>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
