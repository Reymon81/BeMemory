<script src="/js/btnGuardarReunion.js"></script>
<link rel="stylesheet" href="/css/card.css">
<div class="container mt-4">
    <div class="row">
        <!-- Columna izquierda: Formulario -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <center><h1>Agregar Reunión</h1></center>
                </div>
                <div class="card-body">
                    <!-- se mandan los datos del formulario mediante POST -->
                    <form action="/home/reuniones" method="POST" id="formReuniones">
                        <div class="form-group">
                            <input type="text" class="form-control" name="asunto" id="asunto" placeholder="Asunto de reunión" value="{{asunto}}" required>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <input type="text" class="form-control" name="contactos" id="contactos" placeholder="Miembros de la reunión" value="{{contactos}}" readonly required>
                                <div class="input-group-append">
                                    <button type="button" class="btn btn-secondary" id="btnAbrirPopup">Seleccionar</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="date" class="form-control" id="fecha" name="fecha" value="{{fecha}}" min="{{today}}" required>
                        </div>
                        <div class="form-group">
                            <input type="time" class="form-control" name="hora" id="hora" placeholder="Hora de la reunión" value="{{hora}}" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block" id="btnGuardar" disabled>Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Columna derecha: collectionData -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <center><h1>Reuniones Agendadas</h1></center>
                </div>
                <div class="card-body custom-scroll">
                    {{#each collectionData}}
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title"><b>{{this.fechaFormatted}} - {{this.hora}} h.</b></h5>
                            <p class="card-text">{{this.asunto}}</p>
                            <p class="card-text">{{this.contactos}}</p>
                            <form action="/eliminarReunion" method="POST">
                                <input type="hidden" name="reunionId" value="{{this._id}}">
                                <button type="submit" class="btn btn-sm btn-primary position-absolute" style="bottom: 10px; right: 10px;">Borrar</button>
                            </form>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de selección de contactos -->
<div class="modal fade" id="modalContactos" tabindex="-1" role="dialog" aria-labelledby="modalContactosLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalContactosLabel">Seleccionar Contactos</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formListaContactos">
                    {{#each contactList}}
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="{{this}}">
                            <label class="form-check-label">{{this}}</label>
                        </div>
                    {{/each}}
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnSeleccionar">Seleccionar</button>
            </div>
        </div>
    </div>
</div>


