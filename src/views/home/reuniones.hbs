<div class="container mx-4">
<div class="row">
    <div class="col-md-4 ml-auto">
        <div class="card">
            <div class="card-header">
               <center><h1>Acciones para realizar</h1></center> 
            </div>
            <div class="card-body">
                <!-- se mandan los datos del formulario mendiante post -->
                <form action="/home/reuniones" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="asunto" placeholder="Asunto de reunion" value="{{asunto}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="contactos" placeholder="Miembros de la reunion" value="{{contactos}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="fecha" placeholder="Fecha de la reunion" value="{{fecha}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="hora" placeholder="hora de la reunion" value="{{hora}}">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
